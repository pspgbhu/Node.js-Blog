<%- include header %>
	<form method="post">
	  <div class="form-group">
	    <label for="regname">用户名</label>
	    <input type="text" class="form-control" name="name" id="regname" placeholder="username">
	  </div>
	  <div class="form-group">
	    <label for="regpassword">密码</label>
	    <input type="password" class="form-control" name="password" id="regpassword" placeholder="Password">
	  </div>
	  <div class="form-group">
	    <label for="resurepassword">确认密码</label>
	    <input type="password" class="form-control"  name="passwordrepeat" id="resurepassword"  placeholder="Password">
	  </div>
	  <div class="form-group">
	    <label for="regemail">邮箱</label>
	    <input type="email" class="form-control"  name="email" id="regemail">
	  </div>
	  <button type="submit" class="btn btn-default">注册</button>
	</form>
<%- include footer %>